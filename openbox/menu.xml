<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">
        <item label="XTerm">
            <action name="Execute">
                <execute>xterm -j -s -vb +sf +dc -cr darkgreen -u8 -geometry 109x44</execute>
            </action>
        </item>
        <item label="_Thunar">
            <action name="Execute"><execute>thunar</execute></action>
        </item>

        <separator />

        <item label="_Chromium">
            <action name="Execute"><execute>chromium</execute></action>
        </item>
        <item label="_Iceweasel">
            <action name="Execute"><execute>iceweasel</execute></action>
        </item>
        <item label="_Gajim">
            <action name="Execute"><execute>gajim</execute></action>
        </item>

        <separator />

        <item label="XCa_lc">
            <action name="Execute"><execute>xcalc</execute></action>
        </item>
        <item label="Libre_Office">
            <action name="Execute"><execute>libreoffice</execute></action>
        </item>
        <item label="O_kular">
            <action name="Execute"><execute>okular</execute></action>
        </item>
        <item label="_Filezilla">
            <action name="Execute"><execute>filezilla</execute></action>
        </item>

        <separator />

        <item label="_VLC">
            <action name="Execute"><execute>vlc</execute></action>
        </item>
        <!-- This requires the presence of the 'menu' package to work -->
        <menu id="/Debian" />

        <separator />

        <menu id="client-list-menu" />

        <separator />

        <item label="ObConf">
            <action name="Execute"><execute>obconf</execute></action>
        </item>
        <item label="Reconfigure">
            <action name="Reconfigure" />
        </item>
        <item label="Restart">
            <action name="Restart" />
        </item>

        <separator />

        <item label="Exit">
            <action name="Exit" />
        </item>
    </menu>
</openbox_menu>
